<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.anirudh.succinct.PostAnalysis"
    android:background="@drawable/bgimage2">

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/impTermsButton"
        android:background="@drawable/important_terms"
        android:layout_alignTop="@+id/simResButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/shareButton"
        android:background="@drawable/share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/simResButton"
        android:background="@drawable/similar_resources"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="false"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/editButton"
        android:background="@drawable/edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/quizletButton"
        android:background="@drawable/quizlet"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/dictionary"
        android:layout_alignTop="@+id/shareButton"
        android:layout_alignLeft="@+id/simResButton"
        android:layout_alignStart="@+id/simResButton"
        android:id="@+id/dicButton"/>
</RelativeLayout>
